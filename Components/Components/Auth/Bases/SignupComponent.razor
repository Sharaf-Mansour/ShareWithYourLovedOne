<EditForm Model="owner" OnValidSubmit="HandleSignUpAsync">
    <div class="space-y-5">
        <div>
            <label for="signup-name" class="block text-sm font-medium text-gray-300">Full Name</label>
            <InputText id="signup-name" class="mt-1 w-full bg-gray-700 border-2 border-gray-600 text-white rounded-lg p-3 focus:border-cyan-500 focus:ring-cyan-500 transition" @bind-Value="owner.Name" />
        </div>
        <div>
            <label for="signup-email" class="block text-sm font-medium text-gray-300">Email Address</label>
            <InputText id="signup-email" type="email" class="mt-1 w-full bg-gray-700 border-2 border-gray-600 text-white rounded-lg p-3 focus:border-cyan-500 focus:ring-cyan-500 transition" @bind-Value="owner.Email" />
        </div>
        <div>
            <label for="signup-password" class="block text-sm font-medium text-gray-300">Password</label>
            <InputText id="signup-password" type="password" class="mt-1 w-full bg-gray-700 border-2 border-gray-600 text-white rounded-lg p-3 focus:border-cyan-500 focus:ring-cyan-500 transition" @bind-Value="owner.Password" />
        </div>
    </div>
    <div class="mt-8">
        <button type="submit" class="w-full bg-cyan-600 hover:bg-cyan-700 text-white font-bold text-lg py-3 rounded-lg transition">Create Account</button>
    </div>
</EditForm>
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="bg-red-500/10 border border-red-500/30 text-red-300 p-3 rounded-lg mt-6 text-center" role="alert">
        @errorMessage
    </div>
}
@code {
    [Parameter]
    public EventCallback<int> OnLoginSuccess { get; set; }

    private Owner owner = new();
    private string? errorMessage;

    private async Task HandleSignUpAsync()
    {
        errorMessage = null;
        try
        {
            if (!(string.IsNullOrWhiteSpace(owner.Name) && string.IsNullOrWhiteSpace(owner.Email) && string.IsNullOrWhiteSpace(owner.Password)))
            {
                await OwnerService.AddOwnerAsync(owner);
                var loggedInOwnerId = await OwnerService.LoginAsync(owner);
                await OnLoginSuccess.InvokeAsync(loggedInOwnerId);
            }

            errorMessage = "All entries field must be filled";
        }
        catch (EmailAlreadyInUse)
        {
            errorMessage = "Email already in use";
        }
    }

}
